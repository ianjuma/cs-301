<div class="content page" role="main">
    <section>
        <div>
            <div class="main">
                <p><span>*</span> Register for our packaged tours?</p>
                <form id="registration-form" method="POST">
                    <ul>
                        <li>
                            <label for="name">Name <span>*</span></label>
                            <input type="text" name="name" required autocomplete>
                        </li>

                        <li class="inline">
                            <label for="email">Email<span>*</span></label>
                            <input type="email" name="email" required autocomplete>
                        </li>

                        <li class="inline">
                            <label for="telephone">Phone Number<span>*</span> (+254 7XX XXX XXX)</label>
                            <input type="telephone" name="telephone" required autocomplete>
                        </li>

                        <li>
                            <label for="description">What kind of services would you like?<span>*</span></label>
                            <textarea name="description" required></textarea>
                        </li>
                    </ul>

                    <button>Submit</button>
                </form>
            </div>
        </div>
    </section>
</div>